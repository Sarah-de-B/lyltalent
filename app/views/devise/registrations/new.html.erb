<h2>Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                label: "Prenom",
                input_html: {autocomplete: "Prenom"}%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                label: "Nom de famille",
                input_html: {autocomplete: "Nom de Famille"}%>
    <%= f.input :role,
              required: true,
              label: "Musicien ou Organisateur d'événement",
              collection: ["Musicien", "Organisateur d'événement"],
              prompt: "Choisissez votre rôle",
              input_html: { autocomplete: "role" } %>
    <%= f.input :phone_number,
                required: true,
                autofocus: true,
                label: "Numero de telephone",
                input_html: {autocomplete: "telephone"}%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: 'Adresse email',
                input_html: { autocomplete: "Email" }%>
    <%= f.input :password,
                required: true,
                label: "Mot de passe",
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "nouveau mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: 'Confirmation du mot de passe',
                input_html: { autocomplete: "confirmer mot de passe" } %>
  </div>
   <div class='btn-container'>
  <div class="form-actions">
    <%= f.button :submit, "valider", class: 'bottom-middle-btn'%>
    <%= link_to "Finaliser mon EPK ?", new_session_path(resource_name), style: "text-decoration: none; color: black;" %><br />
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
